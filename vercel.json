{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/vector-store$", "dest": "api/vector-store.js" },
    { "src": "^/api/upload-document$", "dest": "api/upload-document.js" },
    { "src": "^/api/delete-file$", "methods": ["DELETE", "GET", "POST"], "dest": "api/delete-file.js" },
    { "src": "/(.*)", "dest": "public/$1" }
  ]
}
